# chat/consumers.py
import json
import asyncio
from channels.generic.websocket import AsyncWebsocketConsumer
from asgiref.sync import sync_to_async
from django.core.exceptions import ObjectDoesNotExist

class ChatConsumer(AsyncWebsocketConsumer):
    
    async def connect(self):
        self.room_id = self.scope['url_route']['kwargs']['room_id']
        self.room_group_name = f'chat_{self.room_id}'
        
        # Aceita a conex√£o primeiro
        await self.accept()
        
        # Depois verifica a autentica√ß√£o e permiss√µes
        if not self.scope["user"].is_authenticated:
            await self.close(code=4001)
            return
            
        # Verifica se o usu√°rio pode acessar a sala
        if not await self.is_user_participant():
            await self.close(code=4003)
            return

        # Entra no grupo
        await self.channel_layer.group_add(
            self.room_group_name,
            self.channel_name
        )
        
        print(f"‚úÖ WebSocket conectado: {self.room_id} - Usu√°rio: {self.scope['user'].username}")

    async def disconnect(self, close_code):
        # Sai do grupo
        if hasattr(self, 'room_group_name'):
            await self.channel_layer.group_discard(
                self.room_group_name,
                self.channel_name
            )
        print(f"üî¥ WebSocket desconectado: {self.room_id} - C√≥digo: {close_code}")

    async def receive(self, text_data):
        try:
            data = json.loads(text_data)
            message_content = data.get('message', '').strip()

            if not message_content:
                return

            # Salva a mensagem
            message_saved = await self.save_message(message_content)
            if not message_saved:
                return

            # Envia para o grupo
            await self.channel_layer.group_send(
                self.room_group_name,
                {
                    'type': 'chat_message',
                    'message': message_content,
                    'username': self.scope["user"].username,
                    'timestamp': message_saved,
                }
            )
            
        except json.JSONDecodeError:
            await self.send(text_data=json.dumps({
                'error': 'Mensagem inv√°lida'
            }))
        except Exception as e:
            print(f"Erro ao processar mensagem: {e}")
            await self.send(text_data=json.dumps({
                'error': 'Erro interno do servidor'
            }))

    async def chat_message(self, event):
        """Envia mensagem para WebSocket"""
        await self.send(text_data=json.dumps({
            'message': event['message'],
            'username': event['username'],
            'timestamp': event['timestamp'],
        }))

    @sync_to_async
    def is_user_participant(self):
        """Verifica se usu√°rio √© participante da sala"""
        try:
            from .models import ChatRoom
            room = ChatRoom.objects.get(id=self.room_id)
            return room.participants.filter(id=self.scope["user"].id).exists()
        except ChatRoom.DoesNotExist:
            return False
        except Exception as e:
            print(f"Erro ao verificar participante: {e}")
            return False

    @sync_to_async
    def save_message(self, content):
        """Salva mensagem no banco"""
        try:
            from .models import ChatRoom, Message
            from django.utils import timezone
            
            room = ChatRoom.objects.get(id=self.room_id)
            message = Message.objects.create(
                room=room,
                user=self.scope["user"],
                content=content
            )
            return message.timestamp.isoformat()
        except ChatRoom.DoesNotExist:
            print(f"Sala {self.room_id} n√£o encontrada")
            return None
        except Exception as e:
            print(f"Erro ao salvar mensagem: {e}")
            return None
        

